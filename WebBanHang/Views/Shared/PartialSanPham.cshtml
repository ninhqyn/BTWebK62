@model TDanhMucSp
@{
    var imageUrl = string.IsNullOrEmpty(Model.AnhDaiDien) 
        ? "../ProductsImages/default.jpg"
        : "../ProductsImages/Images/" + Model.AnhDaiDien;
}

<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
    <div class="featured__item">
        <div class="featured__item__pic set-bg" data-setbg="@Url.Content(imageUrl)" style="background-image: url('@Url.Content(imageUrl)');">
            <ul class="featured__item__pic__hover">
                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="featured__item__text">
            <h6><a asp-controller="Home" asp-action="ChiTietSanPham" asp-route-maSp="@Model.MaLoai">@Model.TenSp</a></h6>
            <h5>@Model.GiaNhoNhat</h5>
        </div>
    </div>
</div>
